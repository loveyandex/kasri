<?xml version="1.0" encoding="UTF-8"?>


<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<AnchorPane xmlns:fx="http://javafx.com/fxml"
            xmlns="http://javafx.com/javafx"
            fx:controller="com.amin.ui.Alert"
            stylesheets="/dark-theme.css"
            prefHeight="70.0" prefWidth="160.0">
    <VBox>
        <HBox>
            <Label>Are you sure close App ??</Label>
        </HBox>

        <HBox alignment="BASELINE_CENTER">
            <HBox>
                <JFXButton styleClass="alertbtn" fx:id="exit" onAction="#exit">exit</JFXButton>
                <HBox.margin>
                    <Insets>
                        <right>10</right>
                        <top>10</top>
                        <left>10</left>
                    </Insets>
                </HBox.margin>
            </HBox>
            <HBox>
                <JFXButton styleClass="alertbtn" fx:id="cancel" onAction="#cancel">cancel</JFXButton>
                <HBox.margin>
                    <Insets>
                        <right>10</right>
                        <top>10</top>
                    </Insets>
                </HBox.margin>
            </HBox>

        </HBox>
    </VBox>

</AnchorPane>
